cinch_minimum_required(VERSION 1.0)

project(simple)

#------------------------------------------------------------------------------#
# If a C++11 compiler is available, then set the appropriate flags
#------------------------------------------------------------------------------#

include(cxx11)

check_for_cxx11_compiler(CXX11_COMPILER)

if(CXX11_COMPILER)
    enable_cxx11()
else()
    message(FATAL_ERROR "C++11 compatible compiler not found")
endif()

#------------------------------------------------------------------------------#
# Set header suffix regular expression
#------------------------------------------------------------------------------#

set(CINCH_HEADER_SUFFIXES "\\.h|\\.hh")

#------------------------------------------------------------------------------#
# Automatic version creation.
#------------------------------------------------------------------------------#

include(version)

#------------------------------------------------------------------------------#
# Add user guide target
#------------------------------------------------------------------------------#

cinch_add_doc(simple-ug ugconfig.py src
    simple-ug-${${PROJECT_NAME}_VERSION}.pdf)

#------------------------------------------------------------------------------#
# Load the extra cinch packages
#------------------------------------------------------------------------------#

cinch_load_extras()

#------------------------------------------------------------------------------#
# Add a library target
#------------------------------------------------------------------------------#

cinch_add_library_target("simple" "simple")

#------------------------------------------------------------------------------#
# Add an application directory
#------------------------------------------------------------------------------#

cinch_add_application_directory("app")

